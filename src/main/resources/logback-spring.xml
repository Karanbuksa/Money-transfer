<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>log/transfer.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ERROR" class="ch.qos.logback.core.FileAppender">
        <file>log/error.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example.moneytransferproj.logger.TransactionLogger" level="info" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>


    <logger name="com.example.moneytransferproj.handler.ExceptionHandlerAdvice" level="error" additivity="false">
        <appender-ref ref="ERROR"/>
    </logger>

    <root level="off">
        <appender-ref ref="FILE"/>
    </root>
</configuration>